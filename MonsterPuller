def monSort():
	pulledMonsters = []
	sortedMons = []
	allMonsters = dict(globals())
	dupeMonsters = []
	for name, var in allMonsters.items():
		if isinstance(var, monster):
			pulledMonsters.append(var)	
	for index, x in enumerate(pulledMonsters):
		if getattr(x, "CR") == 8:
			sortedMons.append(((index, vars(x))))
			print(sortedMons)
			

monSort()



